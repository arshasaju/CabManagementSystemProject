@model BookingViewModel
@{
    ViewData["Title"] = "Booking";
}



<div class="one">
    <h1 style="margin-left:470px;color:white">BOOKING</h1>
</div>



<section class="vh-100" style="background-image:src(" https: //assets.justinmind.com/wp-content/uploads/2019/09/flat-website-ui-design-landerapp.png")">
    <div class="container-fluid h-custom">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-md-9 col-lg-8 col-xl-5" style="margin-left:-36.666667%">
            </div>
            <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1" style="margin-top:70px">
                <form method="post" style="margin-right: 17px;margin-left: -107px;">
                    <div>
                        <label asp-for="From" style="color:aliceblue"></label>
                        <select asp-for="From" asp-items="@Html.GetEnumSelectList<Location>()" class="form-control">
                            <option>---Select Pick-Up location---</option>
                        </select>
                       
                    </div>
                    <div>
                        <label asp-for="To" style="color:aliceblue"></label>
                        <select asp-for="To" class="form-control" asp-items="@Html.GetEnumSelectList<Location>()">
                            <option>---Select Destination---</option>
                        </select>
                       
                    </div>
                     <div>
                        <label asp-for="Date" style="color:aliceblue"></label>
                        <input asp-for="Date" class="form-control" />
                        <span asp-validation-for="Date" class="text-danger"></span>
                    </div>
                    <div>
                        <label asp-for="CarModel" style="color:aliceblue"></label>
                        <select asp-for="CarModel" class="form-control" asp-items="@Html.GetEnumSelectList<CarModel>()">
                            <option>---Select Model---</option>
                        </select>

                    </div>
                    @*<div class="d-grid mt-4">
                    <button class="btn btn-primary">Login</button>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    </div>*@

                    <div class="d-grid mt-4">
                        <button style="width:438px;border-radius:10px" onclick="return confirm('Do you want to finish payement?')">Payment</button>
                    </div>

                    <div class="d-grid mt-4">
                        <button class="glow-on-hover btn-warning" style="width:438px">Book</button>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>